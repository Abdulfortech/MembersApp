
<!-- Header container -->
<div class="container px-4 py-5 mt-5 text-center">
    <h1 class="display-5 fw-bold text-primary my-3">All Members</h1>
    <div class="col-lg-7 mx-auto">
        <ul class="list-group">
            {{#each members}}
            <li class="list-group-item">
                <div class="container p-0 row">
                    <div class="col-3">
                        <i class="fa fa-user-circle text-muted" style="font-size: 100px"></i>
                    </div>
                    <div class="col-9 text-start">
                        <h2>{{this.name}}</h2>
                        <h5><i class="fa fa-envelope"></i> {{this.email}}</h5>
                        <h6><i class="fa fa-phone"></i> {{this.phone}} <a href="/members/edit/{{this.id}}" class="btn btn-primary py-0 mx-2">Edit</a><a href="#" class="btn btn-danger py-0 mx-2">Delete</a></h6>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>        
    </div>
</div>